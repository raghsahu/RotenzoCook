<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/whiteColor"
    android:layout_height="match_parent"
    tools:context=".Fragment.Recipe_Detail">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/editext_background">


                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="260dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/foodimg" />


                    <LinearLayout
                        android:layout_marginTop="170dp"
                        android:weightSum="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight="0.5"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="45dp">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/heart"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        app:fabCustomSize="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/whiteColor"
                        app:backgroundTint="@color/whiteColor"
                        android:src="@drawable/like_hert" />

                        </LinearLayout>



                    <LinearLayout
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:id="@+id/mLinearTimer"
                        >

                        <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_centerVertical="true"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:layout_marginRight="1dp"-->
                            <!--android:foregroundGravity="center"-->
                            <!--android:src="@drawable/alarm_clock" />-->


                        <TextView
                            android:layout_marginRight="20dp"
                            android:background="@drawable/timer_alram_background"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:fontFamily="@font/robotocondensedregular"
                            android:gravity="center"
                            android:text="@string/timer"
                            android:textSize="14dp"
                            android:drawableLeft="@drawable/alarm_clock"
                            android:textColor="@color/textblackcolor"
                            android:textStyle="bold" />

                    </LinearLayout>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="240dp"
                        android:background="@drawable/custome_cardview">


                        <TextView
                            android:id="@+id/recipename"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="20dp"
                            android:text="Anduaisionm Omlet"
                            android:fontFamily="@font/mogulmagistralbold"
                            android:textColor="@color/textblackcolor"
                            android:textSize="26dp"
                            android:textStyle="bold" />

                        <TextView

                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recipename"
                            android:padding="20dp"
                            android:text="test great!"
                            android:fontFamily="@font/robotocondensedregular"
                            android:textColor="@color/lightblackcolor"
                            android:textSize="14dp"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:weightSum="4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/title"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:padding="10dp"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:weightSum="1"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:background="@drawable/oval_shap_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@drawable/custome_cardview"
                                    android:padding="5dp"
                                    android:fontFamily="@font/robotocondensedregular"
                                    android:text="3"
                                    android:id="@+id/totalmin"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:gravity="center"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:textSize="11dp"
                                    android:fontFamily="@font/robotocondensedregular"
                                    android:padding="5dp"
                                    android:text="@string/total_min"
                                    android:textColor="@color/textblackcolor" />


                            </LinearLayout>

                            <LinearLayout
                                android:padding="10dp"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:weightSum="1"
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:background="@drawable/oval_shap_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:gravity="center"
                                    android:id="@+id/awaymin"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:layout_gravity="center"
                                    android:background="@drawable/custome_cardview"
                                    android:fontFamily="@font/robotocondensedregular"
                                    android:padding="5dp"
                                    android:text="32"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:textSize="11dp"
                                    android:layout_weight="0.5"
                                    android:fontFamily="@font/robotocondensedregular"
                                    android:padding="5dp"
                                    android:text="@string/away_min"
                                    android:textColor="@color/textblackcolor" />


                            </LinearLayout>

                            <LinearLayout
                                android:padding="10dp"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:weightSum="1"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:background="@drawable/oval_shap_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:gravity="center"
                                    android:layout_weight="0.5"
                                    android:id="@+id/calories"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/robotocondensedregular"
                                    android:background="@drawable/custome_cardview"
                                    android:padding="5dp"
                                    android:text="352" />

                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:padding="5dp"
                                    android:layout_weight="0.5"
                                    android:textSize="11dp"
                                    android:fontFamily="@font/robotocondensedregular"
                                    android:text="@string/calories_min"
                                    android:textColor="@color/textblackcolor" />


                            </LinearLayout>

                            <LinearLayout
                                android:padding="10dp"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:weightSum="1"
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:background="@drawable/oval_shap_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:gravity="center"
                                    android:id="@+id/protien"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/robotocondensedregular"
                                    android:background="@drawable/custome_cardview"
                                    android:padding="5dp"
                                    android:text="325" />

                                <TextView
                                    android:gravity="center"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/robotocondensedregular"
                                    android:textSize="11dp"
                                    android:padding="5dp"
                                    android:text="@string/protien_min"
                                    android:textColor="@color/textblackcolor" />


                            </LinearLayout>

                        </LinearLayout>


                    </RelativeLayout>


                </RelativeLayout>








                <!-- <androidx.cardview.widget.CardView
                     xmlns:android="http://schemas.android.com/apk/res/android"
                     xmlns:app="http://schemas.android.com/apk/res-auto"
                     android:layout_width="match_parent"
                     android:layout_height="180dp"
                     android:layout_alignParentStart="true"
                     app:cardBackgroundColor="@color/colorPrimary"
                     app:cardCornerRadius="20dp"
                     android:layout_marginTop="200dp"

                     app:cardElevation="0dp"
                     app:cardUseCompatPadding="true">


                 </androidx.cardview.widget.CardView>-->






            </FrameLayout>



            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:tabGravity="fill"
                android:layout_margin="10dp"
                app:tabSelectedTextColor="@color/colorPrimaryDark"
                app:tabIndicatorHeight="1dp"
                app:tabMode="fixed" />




            <LinearLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>