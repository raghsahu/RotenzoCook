<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@drawable/signupbackground"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layoutDirection="rtl"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            >


            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:gravity="left|center"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                android:fontFamily="@font/mogulmagistralbold"
                android:layout_alignParentStart="false"/>


        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/username"
            android:textSize="18dp"
            android:textColor="@color/textblackcolor"
            android:textStyle="bold"
            android:fontFamily="@font/mogulmagistralbold"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/username"
            android:layout_marginTop="20dp"
            android:background="@drawable/editext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:inputType="text"
            android:fontFamily="@font/robotocondensedregular"
            android:layout_width="match_parent"
            android:layout_height="45dp" />


        <TextView
            android:layout_width="wrap_content"
            android:text="@string/email"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/textblackcolor"
            android:textStyle="bold"
            android:fontFamily="@font/mogulmagistralbold"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/email"
            android:layout_marginTop="20dp"
            android:background="@drawable/editext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:inputType="text"
            android:fontFamily="@font/robotocondensedregular"
            android:layout_width="match_parent"
            android:layout_height="40dp" />



        <TextView
            android:layout_width="wrap_content"
            android:text="@string/phone_nmbr"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/textblackcolor"
            android:textStyle="bold"
            android:fontFamily="@font/mogulmagistralbold"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/phone"
            android:layout_marginTop="20dp"
            android:background="@drawable/editext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:fontFamily="@font/robotocondensedregular"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/password"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/textblackcolor"
            android:textStyle="bold"
            android:fontFamily="@font/mogulmagistralbold"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/password"
            android:layout_marginTop="20dp"
            android:background="@drawable/editext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:inputType="textPassword"
            android:fontFamily="@font/robotocondensedregular"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:text="@string/sign_up"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/button"
            android:textSize="16dp"
            android:fontFamily="@font/mogulmagistralbold"
            android:textAllCaps="false"
            android:textColor="@color/whiteColor"
            android:background="@drawable/button_corner"
            android:layout_height="40dp" />



        <TextView
            android:id="@+id/tv_t_and_c"
            android:textSize="15dp"
            android:textColor="@color/textblackcolor"
            android:text="@string/t_and_c"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:fontFamily="@font/mogulmagistralbold"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            />



    </LinearLayout>


    </ScrollView>


</LinearLayout>
