<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/mLinearLayout"
        android:weightSum="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_weight="1.5"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="fitXY"
             />

        <LinearLayout
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:weightSum="2"
            android:orientation="vertical"
            >

            <TextView
                android:layout_weight="1.5"
                android:textStyle="bold"
                android:fontFamily="@font/mogulmagistralbold"
                android:id="@+id/txtRecipeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bread Maker jhjh "
                android:textColor="@color/textblackcolor"
                android:padding="5dp"
                android:textSize="18sp" />
            <TextView
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                 android:textColor="@color/lightblackcolor"
                android:textStyle="bold"
                android:fontFamily="@font/robotocondensedregular"
                android:id="@+id/mTextRecipecount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8 Recipe"
                android:textSize="14sp" />




        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
